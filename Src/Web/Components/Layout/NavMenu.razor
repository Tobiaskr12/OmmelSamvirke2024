@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink OnClick="@(() => NavigateTo("/teknisk-data"))" Icon="@Icons.Material.Filled.DataSaverOff">
        Logs and Traces
    </MudNavLink>
    <MudNavLink OnClick="@(() => NavigateTo("/Nyhedsbreve"))" Icon="@Icons.Material.Filled.Newspaper">
        Nyhedsbreve
    </MudNavLink>
</MudNavMenu>

@code {
    [Parameter] public EventCallback OnCloseDrawer { get; set; }

    private async void NavigateTo(string route)
    {
        NavigationManager.NavigateTo(route);
        await OnCloseDrawer.InvokeAsync();
    }
}
